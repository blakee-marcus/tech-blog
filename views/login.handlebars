<form class="login-form card">
  <h3 class="card-header">Login!</h3>
  <div class="card-body">
    <div>
    <label class="form-label" for="email-login">email:</label>
    <input type="text" class="form-input" id="email-login" />
  </div>
  <div>
    <label class="form-label" for="password-login">password:</label>
    <input type="password" class="form-input" id="password-login" />
  </div>
  <div>
    <button class="btn" type="submit">login</button>
  </div>
  </div>
  
</form>

<form class="signup-form card">
  <h3 class="card-header">Sign Up!</h3>
  <div>
    <label for="username-signup" class="form-label">username:</label>
    <input type="text" class="form-input" id="username-signup" />
  </div>
  <div>
    <label for="email-signup" class="form-label">email:</label>
    <input type="text" class="form-input" id="email-signup" />
  </div>
  <div>
    <label for="password-signup" class="form-label">password:</label>
    <input type="password" class="form-input" id="password-signup" />
  </div>
  <div>
    <button type="submit" class="btn">signup</button>
  </div>
</form>

<script src="/javascript/login.js"></script>